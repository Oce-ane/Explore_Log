<div class="form-edit">
  <div class="header">
    <%= link_to journeys_path() do %>
      <%= image_tag "back.png", class: 'back-image', style: 'width: 22px; height: 22px;' %>
    <% end %>
    <%= link_to journeys_path, id: 'logo' do %>
      <p class="logo">EXPLORELOG</p>
    <% end %>
  </div>
  <%= simple_form_for(@journey) do |f| %>
    <%= f.input :name, input_html: {autocomplete: 'off'} %>
    <%= f.label :location %>
    <%= f.input :location, as: :hidden,
                input_html: { class: "journey_location",
                      data: {location_autocomplete_target: "location"}},
                wrapper_html: {data: {controller: "location-autocomplete",
                                      location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}} %>
    <br>
    <div class="form-dates">
      <div class="start">
        <%= f.input :start_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
      </div>
      <div class="end">
        <%= f.input :end_date,
                as: :string,
                input_html: { data: { controller: "datepicker" } } %>
      </div>
    </div>
    <%= f.input :description %>
    <%= f.label :cover_photo, class: "btn mt-3" do %>
      <i class="fa-solid fa-camera"></i>
      <%= f.file_field :cover_photo, class: "hidden-input" %>
    <% end %>
    <%= f.label :song, class: "btn mt-3", id: "music" do %>
      <i class="fa-solid fa-music"></i>
      <%= f.file_field :song, class: "hidden-input" %>
    <% end %>
    <% if @journey.persisted? %>
      <div class="card-map mt-4" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('map.jpg');">
        <%= link_to map_journey_path(@journey), class: "edit map-edit" do %>
          <i class="fa-regular fa-pen-to-square"></i>
        <% end %>
      </div>
    <% end %>
    <%# <%= f.submit "✔️", class: "large", id: "submit-btn" %>
    <%= button_tag( class: "large", id: "submit-btn" ) do  %>
      <i class="fa-solid fa-check"></i>
    <% end %>
  <% end %>
</div>
